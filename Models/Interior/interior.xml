<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourtourelle</object-name>
    <object-name>cloison</object-name>
    <object-name>seat</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitretourelle</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitretourelle</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Heinkel-He-111/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -5.820 </x-m>
      <y-m> -0.273 </y-m>
      <z-m>  0.114 </z-m>
    </offsets>
  </model>

  <!-- Gunner
  <model>
    <path>Aircraft/Heinkel-He-111/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.760 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.426 </z-m>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model> -->

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Heinkel-He-111/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -6.434 </x-m>
      <y-m>  0.017 </y-m>
      <z-m>  0.757 </z-m>
    </offsets>
  </model>

  <!-- Guns -->
  <model>
    <path>Aircraft/Heinkel-He-111/Models/Interior/Guns/guns.xml</path>
    <offsets>
      <x-m> -8.257 </x-m>
      <y-m>  0.174 </y-m>
      <z-m> -0.174 </z-m>
      <pitch-deg> -20 </pitch-deg>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Heinkel-He-111/Models/Interior/Guns/guns.xml</path>
    <offsets>
      <x-m>  0.247 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.045 </z-m>
      <pitch-deg>   -20 </pitch-deg>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Heinkel-He-111/Models/Interior/Guns/guns.xml</path>
    <offsets>
      <x-m> -2.022 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.223 </z-m>
      <pitch-deg>    20 </pitch-deg>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <!-- Protection tourelle supÃ©rieure -->
  <animation>
    <name>IntLaTourelle</name>
    <object-name>inttourtourelle</object-name>
    <object-name>intvitretourelle</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntLaTourelle</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0.0 </dep></entry>
      <entry><ind> 1 </ind><dep> -0.9 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
